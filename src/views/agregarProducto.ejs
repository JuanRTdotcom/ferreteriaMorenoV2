            <div class="col-12 col-md-6">
              <div class="file-upload col-12 mb-3">
                <div class="image-upload-wrap">
                  <input
                    class="file-upload-input"
                    name="image"
                    id="archivo"
                    required
                    type="file"
                    onchange="readURL(this);"
                    accept="image/*"
                  />
                  <div class="drag-text">
                    <h3 style="font-size: 14px; font-weight: 900;">
                      <%- include ('_codigoPedazos/recursoSVG/uploadImage.ejs')
                      -%>
                      <br />
                      seleccionar imagen
