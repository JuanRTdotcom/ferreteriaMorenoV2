<%- include ('_codigoPedazos/inicioDashboard.ejs') -%>

<%- include ('_codigoPedazos/alertasMensaje.ejs') -%>
<div class="container-fluid" id="_contenidoCambiante">
  <div class="col-12">
    <div class="card shadow">
      <div
        class="card-header py-3 d-flex flex-row align-items-center justify-content-between"
      >
        <h6 class="m-0 font-weight-bold text-primary">
          <i class="fas fa-fw fa-plus-circle"></i> Agregar Colores
        </h6>
      </div>
      <div class="card-body">
        
          <div class="row">
        <form action="/registrar-colores" class="col-12 col-md-6" method="post" enctype="application/x-www-form-urlencoded">
            <div class="col-12">
              <div class="input-group mb-3 col-12">
                <div class="input-group-prepend" style="width: 42px;">
                  <span class="input-group-text" id="basic-addon1">
                    <i class="fa fa-cube"></i>
                  </span>
                </div>
                <input
                  type="text"
                  class="form-control"
                  autofocus
                  required
                  autocomplete="off"
                  name="nombre"
                  placeholder="Nombre del rubro"
                  aria-label="nombre"
                  aria-describedby="basic-addon1"
                />
              </div>
              <div class="input-group mb-3 col-12">
                <div class="input-group-prepend" style="width: 42px;">
                  <span class="input-group-text" id="basic-addon2">
                    <i class="fa fa-paint-brush"></i>
                  </span>
                </div>
                <input
                  type="color"
                  class="form-control"
                  autofocus
                  required
                  autocomplete="off"
                  name="color"
                  placeholder="Nombre del rubro"
                  aria-label="nombre"
                  aria-describedby="basic-addon2"
                />
              </div>
              <div class="input-group mb-3 col-lg-12 col-12 col-md-12">
                <div class="input-group-prepend" style="width: 42px;">
                  <label class="input-group-text" for="">
                    <i class="fa fa-archive"></i>
                  </label>
                </div>
                <select class="custom-select" name="estado" id="" required>
                  <option value="" selected disabled>Selec. estado...</option>
                  <option value="Activo">Activo</option>
                  <option value="Inactivo">Inactivo</option>
                  
                </select>
              </div>
              
              <div class="input-group mb-3 col-lg-12 col-12 col-md-12">
                <button type="sumbit" class="btn btn-primary col-12">
                  Registrar
                </button>
              </div>
            </div>
        </form>
            <div class="col-12 col-md-6 table-responsive">
              <table class="table ">
                  <thead>
                    <tr>
                        <th>#</th>
                        <th>Accion</th>
                        <th>Nombre</th>
                        <th>Color</th>
                        <th class="text-center">Estado</th>
                    </tr>
                  </thead>
                  <tbody>
                    <%if (_dataColores.length > 0){%>
                        <% let i = 1;_dataColores.forEach(e=>{%>
                            <tr>
                                <td><%= i%></td>
                                <td>
                                  <a href="/metadata/colores/eliminar/<%=e.id%>" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                </td>
                                <td><%=e.nombre%></td>
                                <td><div style="border-radius: 5px;width: 50px;height: 10px;background:<%= e.color %>"></div></td>
                                <%if(e.estado == 'Activo'){%>
                                    <td class="text-center"><i style="color:#269E41" class="fa fa-check"></i></td>
                                    <%} else{%>
                                        <td class="text-center"><i class="fa fa-times" style="color:#E31732"></i></td>
                                     <%}%>   
                                        
                                
                            </tr>
                        <%i++})%>

                    <%}%>
                  </tbody>
              </table>
              <% if(_dataColores.length == 0){%>
                <div class="col-12 ">
                  <div class="mx-auto" style="max-width: 200px;">
                    <%-include ('_codigoPedazos/recursoSVG/404NotFound.ejs')-%>
                  </div>
                  <div class="mx-auto text-center" style="max-width: 200px;">
                    No hay datos encontrados..!
                  </div>
                </div>
                
              <%}%>
            </div>
          </div>

          
       
      </div>
    </div>
  </div>
  
</div>

